<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:paddingHorizontal="35dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccount">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:layout_marginTop="91dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/create_account_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="91dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Create Account"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Fill your information below or register
with your social account"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/create_account_txt"
        app:layout_constraintStart_toStartOf="@+id/create_account_txt"
        app:layout_constraintTop_toBottomOf="@id/create_account_txt" />

    <EditText
        android:id="@+id/name_etx"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:paddingStart="30dp"
        android:background="@drawable/edit_text_background"
        android:hint="Your name"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/txt1"/>
    <EditText
        android:id="@+id/birthDay_etx"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:paddingStart="30dp"
        android:maxLength="10"
        android:inputType="number"
        android:background="@drawable/edit_text_background"
        android:hint="MM/DD/YYYY"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/name_etx"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_calendar"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/birthDay_etx"
        app:layout_constraintEnd_toEndOf="@+id/birthDay_etx"
        app:layout_constraintTop_toTopOf="@+id/birthDay_etx" />
    <EditText
        android:id="@+id/adress_etx"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:paddingStart="30dp"
        android:background="@drawable/edit_text_background"
        android:hint="Enter your Location"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/birthDay_etx"/>

    <EditText
        android:id="@+id/phone_etx"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:paddingStart="30dp"
        android:background="@drawable/edit_text_background"
        android:hint="+1 "
        android:inputType="number"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/adress_etx"/>


    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="30dp"
        android:text="NEXT"
        android:textColor="@color/white"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_background"
        app:layout_constraintTop_toBottomOf="@id/phone_etx"
        tools:layout_editor_absoluteX="35dp" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Or sign In with"
        android:textColor="@color/gray"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button" />


    <LinearLayout
        android:id="@+id/ic_apple"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@drawable/logo_background"
        android:gravity="center"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toStartOf="@id/ic_google"
        app:layout_constraintTop_toTopOf="@id/ic_google">

        <ImageView
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/ic_apple" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ic_google"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@drawable/logo_background"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt">

        <ImageView
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/ic_google" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ic_facebook"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@drawable/logo_background"
        android:gravity="center"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@id/ic_google"
        app:layout_constraintTop_toTopOf="@id/ic_google">

        <ImageView
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/ic_facebook" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>