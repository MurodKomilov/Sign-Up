<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:paddingHorizontal="35dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:layout_marginTop="91dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/create_account_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="91dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Create Account"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Fill your information below or register
with your social account"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/create_account_txt"
        app:layout_constraintStart_toStartOf="@+id/create_account_txt"
        app:layout_constraintTop_toBottomOf="@id/create_account_txt" />

    <EditText
        android:id="@+id/name_etx"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:paddingStart="30dp"
        android:background="@drawable/edit_text_background"
        android:hint="Your name"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/txt1"/>
    <EditText
        android:id="@+id/birthDay_etx"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:paddingStart="30dp"
        android:background="@drawable/edit_text_background"
        android:hint="MM/DD/YYYY"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/name_etx"/>
    <EditText
        android:id="@+id/adress_etx"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:paddingStart="30dp"
        android:background="@drawable/edit_text_background"
        android:hint="Enter your Location"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/birthDay_etx"/>

    <EditText
        android:id="@+id/phone_etx"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:paddingStart="30dp"
        android:background="@drawable/edit_text_background"
        android:hint="+1 "
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/adress_etx"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="30dp"
        android:text="NEXT"
        android:textColor="@color/white"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_background"
        app:layout_constraintTop_toBottomOf="@id/phone_etx"
        tools:layout_editor_absoluteX="35dp" />

</androidx.constraintlayout.widget.ConstraintLayout>